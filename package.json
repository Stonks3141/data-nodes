{
  "name": "webnodes",
  "type": "module",
  "scripts": {
    "check": "tsc",
    "dev": "esbuild src/index.tsx --loader:.svg=dataurl --loader:.wasm=file --bundle --sourcemap --format=esm --outdir=public --watch --servedir=public",
		"asbuild:debug": "asc assembly/index.ts --target debug",
		"asbuild:release": "asc assembly/index.ts --target release",
    "build": "rm -rf dist && cp -r public dist && bun run asbuild:release && esbuild src/index.tsx --loader:.svg=dataurl --loader:.wasm=file --bundle --minify --format=esm --outdir=dist"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "preact": "^10.19.6"
  },
  "devDependencies": {
    "assemblyscript": "^0.27.24",
    "esbuild": "^0.20.1",
    "typescript": "^5.3.3"
  }
}