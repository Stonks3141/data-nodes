{
  "compilerOptions": {
		"target": "ES2020",
		"lib": ["ESNext", "DOM"],
    "module": "ESNext",
		"skipLibCheck": true,

    "moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"allowJs": false,

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
  },
	"include": ["src"]
}
